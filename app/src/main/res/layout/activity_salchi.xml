<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".activity_salchi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/salchipapas"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/emplatado_final_de_las_salchipapas"
            android:scaleType="centerCrop"
            android:elevation="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Título -->
        <TextView
            android:id="@+id/Ti_salchipapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Titulo_Salchi"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/cardview_dark_background"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"
            android:fontFamily="serif" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/descrip_salchi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descripcion_salchi"
            android:textSize="16sp"
            android:textColor="@color/cardview_dark_background"
            android:lineSpacingExtra="4dp"
            android:justificationMode="inter_word"
            android:layout_marginBottom="24dp" />

        <!-- Botón volver -->
        <Button
            android:id="@+id/btn_volver_salchis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_volverMenu"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:elevation="2dp" />

    </LinearLayout>
</ScrollView>