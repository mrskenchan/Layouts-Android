<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_bandera"
    tools:context=".activity_resena">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Titulo -->
        <TextView
            android:id="@+id/Ti_formulario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Titulo_Resena"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"
            android:fontFamily="serif" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descripcion_resena"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <!-- Nombre -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Tu nombre completo">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Correo -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Correo electrónico">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Región -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Región de Chile">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Nombre de la Receta -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Nombre de la receta">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nombre_receta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- ingredientes -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Ingredientes (uno por línea)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ingredientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="5"
                android:gravity="top|start" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- preparación -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Preparación paso a paso">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_preparacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="6"
                android:gravity="top|start" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Botón enviar -->
            <Button
                android:id="@+id/btn_enviar_receta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_enviarReceta"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#0033A0"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp"
                android:padding="16dp"
                android:elevation="2dp" />

            <!-- Botón volver -->
            <Button
                android:id="@+id/btn_volver_formulario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_volverMenu"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#0033A0"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:elevation="1dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>