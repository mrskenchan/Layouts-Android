<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_bandera"
    tools:context=".activity_cazuela">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <ImageView
            android:id="@+id/im_cazuela"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/cazuela"
            android:scaleType="centerCrop"
            android:elevation="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Titulo -->
        <TextView
            android:id="@+id/Ti_cazuela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Titulo_Cazuela"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"
            android:fontFamily="serif" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/descrip_cazuela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descripcion_cazuela"
            android:textSize="16sp"
            android:textColor="#212121"
            android:lineSpacingExtra="4dp"
            android:justificationMode="inter_word"
            android:layout_marginBottom="24dp" />

        <!-- Botón volver -->
        <Button
            android:id="@+id/btn_volver_cazuela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_volverMenu"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:elevation="2dp" />

    </LinearLayout>
</ScrollView>