<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_bandera">


    <ImageView
        android:id="@+id/imagenDetalleReceta"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/nombreDetalleReceta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="16dp"
        android:text="Nombre de la receta" />

    <TextView
        android:id="@+id/preparacionDetalleReceta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginTop="8dp"
        android:text="Preparación de la receta" />

    <!-- Botón volver -->
    <Button
        android:id="@+id/btn_volver_detalle_receta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_volverMenu"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#0033A0"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:elevation="2dp" />

</LinearLayout>

