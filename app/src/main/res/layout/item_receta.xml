<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:background="@android:color/white"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imagenReceta"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/nombreReceta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de Receta"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/preparacionReceta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PreparaciÃ³n breve"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#666666" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="start">

                <Button
                    android:id="@+id/btnVerDetalles"
                    android:layout_width="wrap_content"
                    android:backgroundTint="#0033A0"
                    android:layout_height="wrap_content"
                    android:text="Ver detalles"/>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>

                <ImageButton
                    android:id="@+id/btn_modificar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_editar"
                    android:src="@drawable/ic_editar"
                    android:layout_marginStart="8dp"/>

                <ImageButton
                    android:id="@+id/btn_eliminar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_eliminar"
                    android:src="@drawable/ic_eliminar"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
