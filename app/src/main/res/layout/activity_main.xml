<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_bandera"
    android:fillViewport="true"
    tools:context=".activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <!-- Titulo -->

        <TextView
            android:id="@+id/Ti_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recetas Chilenas Tradicionales"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="32dp"
            android:fontFamily="serif" />

        <!-- Recetas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <ImageButton
                        android:id="@+id/btn_salchipapas"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:elevation="4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/zonanorte" />

                    <TextView
                        android:id="@+id/Texto_Norte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Zona Norte"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <ImageButton
                        android:id="@+id/btn_pastel_choclo"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:elevation="4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/montana" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Zona Centro"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <ImageButton
                        android:id="@+id/btn_cazuela"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:elevation="4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/zonasur" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Zona Sur"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Compartir Receta -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <ImageButton
                        android:id="@+id/btn_compartir"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/opinion"
                        android:scaleType="centerCrop"
                        android:elevation="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Comparte tu Receta"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_ver_recetas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Listado de Recetas"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#0033A0"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/footer"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <!-- Iconos de Redes Sociales -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <!-- Instagram -->
            <ImageButton
                android:id="@+id/btn_instagram"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/instagram_background"
                android:src="@drawable/ic_instagram"
                android:contentDescription="Instagram"
                android:elevation="2dp" />

            <!-- Facebook -->
            <ImageButton
                android:id="@+id/btn_facebook"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/facebook_background"
                android:src="@drawable/ic_facebook"
                android:contentDescription="Facebook"
                android:elevation="2dp" />

            <!-- YouTube -->
            <ImageButton
                android:id="@+id/btn_youtube"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/youtube_background"
                android:src="@drawable/ic_youtube"
                android:contentDescription="YouTube"
                android:elevation="2dp" />

        </LinearLayout>

        <!-- Texto adicional -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/footerRRSS"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textColor="#666666" />
    </LinearLayout>
</ScrollView>