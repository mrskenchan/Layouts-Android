<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo transparente -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
        </shape>
    </item>

    <!-- Línea horizontal superior azul (mitad izquierda) -->
    <item
        android:left="0dp"
        android:right="200dp"
        android:top="0dp"
        android:height="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#0033A0" />
        </shape>
    </item>

    <!-- Línea horizontal superior roja (mitad derecha) -->
    <item
        android:left="200dp"
        android:right="0dp"
        android:top="0dp"
        android:height="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#D32F2F" />
        </shape>
    </item>

    <!-- Línea horizontal inferior azul (mitad izquierda) -->
    <item
        android:left="0dp"
        android:right="200dp"
        android:bottom="8dp"
        android:height="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#0033A0" />
        </shape>
    </item>

    <!-- Línea horizontal inferior roja (mitad derecha) -->
    <item
        android:left="200dp"
        android:right="0dp"
        android:bottom="8dp"
        android:height="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#D32F2F" />
        </shape>
    </item>

</layer-list>